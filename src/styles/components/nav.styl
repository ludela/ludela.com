header
  position fixed
  width 100%
  color #fff
  z-index 1000

  ul
    display flex
    justify-content space-between

  li
    display inline-block
    margin 0 2em


nav
  width 300px
  overflow hidden
  position fixed
  top 0
  left -300px
  height 100%
  z-index 1100
  background gray
  transition all 350ms ease

  &.is-open
    left 0



.wrapper
  position relative
  width 100%
  overflow hidden
  left 0
  transition all 350ms ease

  &.nav-open
    left 300px

