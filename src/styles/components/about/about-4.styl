$width = 1200px
$height = 100vh

$tabwidth = 100vw
$tabheight = 100vh


&#about
  #step-4
    opacity 1
    background none
    top 0
    left 0
    width 100vw
    position absolute
    transform translate3d(0, $height, 0)
    transition all 500ms ease-in
    height $height

    .our-story
      width $width
      margin 0 auto
      position absolute
      left 50%
      top 0
      margin-left ($width * -0.5)

      h1
        width 100%
        max-width 1200px
        text-align center
        position absolute
        top 75px

    .story-1, .story-2, .story-3, .story-4, .story-5, .story-6, .story-7, .story-8, .story-9
      position absolute
      width 100vw
      height $height
      overflow-y scroll
      left 0

      .story__content
        width 1200px
        position absolute
        left 50vw
        margin-left -600px

      .story-img
        position absolute
        top 0
        left 0
        height $height * 0.8
        width $width * 0.4

        h3
          font-size 60px
          font-family "Proxima Nova"
          color rgb(241, 234, 208)
          text-transform uppercase
          font-weight 100
          line-height 1
          width 100%
          text-align center
          position absolute
          left 0
          top 30%
          transform translate3d(0, (0.2 * $height), 0)
          transition all 1500ms ease-in
          transition-delay 1s

        img
          position absolute
          top 50%
          left 0
          width 100%
          height auto
          transform translate3d(0, (-0.1 * $height), 0)
          transition all 1s ease-in
          transition-delay 1s


      .story-text
        position absolute
        left $width * 0.5
        top 0
        width 530px
        z-index 99

        h2
          font-size 20px
          font-family "Proxima Nova"
          color #f1ead0
          text-transform uppercase
          line-height 1.271
          text-align left
          text-shadow 0px 2px 13px rgba(0,0,0,0.3)
          z-index 296
          position relative
          top 0
          left 0

        p
          font-size 20px
          font-family "Proxima Nova"
          color #fff
          font-weight bold
          line-height 1.454
          text-align justify
          z-index 295
          margin 0
          margin-top 0
          position relative
          width 100%
          top 0
          left 0

      .line-top
