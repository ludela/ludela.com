#step-3
  opacity 0
  transition opacity 100ms ease

&.is-step-3
  background rgba(240,189,60,1)

  &:before
    opacity 0

  &:after
    opacity 1
    background linear-gradient(0deg, rgba(34,16,16,1) 40%, rgba(240,189,60,0))
    transition opacity 0s ease

&.is-step-2 #step-3
  opacity 0
  transition opacity 1s ease

&.is-step-3 #step-3
  opacity 1

  .small-text
    opacity 1


&.is-step-4 #step-3,
&.is-step-5 #step-3,
&.is-step-6 #step-3,
&.is-step-7 #step-3
  transition opacity 750ms ease

  .splash__headline
    position absolute
    transform translate3d(0, -100vh, 0)


@media all and (min-height 650px and min-width 800px)

  #step-3

    .small-text
      &.\\+right
        margin-left (300 / 1200) * 100%


@media all and (min-width 800px)
  #step-3
    opacity 0
    transition opacity 100ms ease

    .small-text

      &.\\+left
        text-align right
        margin-left ((280 + 140) / 1200) * -100%

      &.\\+right
        margin-left (300 / 1200) * 100%

  &.is-step-3 #step-3

    .small-text
      transform translate3d(0,450%,0)

  &.is-step-2 #step-3,
  &.is-step-3 #step-3,
  &.is-step-4 #step-3

    .small-text

      &.\\+one
        margin-bottom 24%

      &.\\+two
        margin-bottom 20%
        // margin-bottom -65px

      &.\\+three
        margin-bottom 17%
        // margin-bottom -85px

      &.\\+four
        margin-bottom 13%
        // margin-bottom -145px

      &.\\+five
        margin-bottom 10%
        // margin-bottom -175px

      &.\\+six
        margin-bottom 6%
        // margin-bottom -235px

      &.\\+seven
        margin-bottom 3%
        // margin-bottom -265px

      &.\\+eight
        margin-bottom 0
        // margin-bottom -315px














