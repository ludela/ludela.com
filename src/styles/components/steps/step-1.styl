$width = 240

&__headline
  transition transform 500ms ease

#step-1
  opacity 0
  transition opacity 100ms ease

  .splash__headline
    position absolute
    background red
    opacity 0
    text-align center
    left (((1000 - $width) / 2) / 1000) * 100%
    width ($width / 1000) * 100%
    height 150px
    transform translate3d(0, 80%, 0)

&.is-step-1
  background green

&.is-step-1 #step-1
  opacity 1

  .splash__headline
    opacity 1

&.is-step-2 #step-1,
&.is-step-3 #step-1,
&.is-step-4 #step-1
  opacity 0
  transition-delay 300ms

  .splash__headline
    transform translate3d(0, -100vh, 0)
