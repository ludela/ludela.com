#step-2
  opacity 0
  transition opacity 100ms ease

  .splash__headline
    position absolute
    color #fff
    text-align center
    left (((1000 - $width) / 2) / 1000) * 100%
    width ($width / 1000) * 100%
    height 150px
    transform translate3d(0, 500%, 0)

&.is-step-2
  background #221010

  &:before
    content ''
    position fixed
    pos-fill()
    background linear-gradient(0deg, rgba(255,255,255,0) 40%, rgba(255,255,255,0.3))

&.is-step-2 #step-2
  opacity 1

  .splash__headline
    opacity 1
    transform translate3d(0, 80%, 0)

&.is-step-3 #step-2,
&.is-step-4 #step-2
  opacity 0
  transition-delay 300ms

&.is-step-4 #step-2
  .splash__headline
    transform translate3d(0, -100vh, 0)
