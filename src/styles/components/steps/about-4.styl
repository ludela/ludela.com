$height = 860px;

&#about
  #step-4
    opacity: 1
    background: none
    transform translate3d(0, $height, 0)
    transition: all 500ms ease-in;
    height: $height

    .our-story
      width: 1200px
      margin 0 auto
      position: relative;
      top: -100px

      h1
        width 100%
        text-align: center;
        position: absolute
        top: 100px

    .copy-right
      display: inline-block;
      width: 45.83%;
      padding: 60px 10px;

      .story-1, .story-2, .story-3, .story-4, .story-5, .story-6, .story-7, .story-8, .story-9
        position absolute
        width 1200px
        height 860px
        left 0

        h3
          font-size: 60px;
          font-family: "Proxima Nova";
          color: rgb(241, 234, 208);
          text-transform: uppercase;
          font-weight: 100;
          line-height: 1;
          text-align: center;
          position: absolute;
          left: 60px
          top: ($height / 3)
          transform translate3d(0, (0.2 * $height), 0)
          transition: all 1500ms ease-in;
          transition-delay: 1s

        img
          position absolute
          bottom 0
          left: 0
          width: 482px
          height: auto
          transform translate3d(0, (-0.1 * $height), 0)
          transition: all 1s ease-in;
          transition-delay: 1s

        h2
          font-size: 5.324px;
          font-family: "Proxima Nova";
          color: rgb(241, 234, 208);
          font-weight: bold;
          text-transform: uppercase;
          line-height: 1.271;
          text-align: left;
          text-shadow: 0px 2px 13px rgba(0, 0, 0, 0.3);
          -moz-transform: matrix( 3.72489772958122,0,0,3.71869907997018,0,0);
          -webkit-transform: matrix( 3.72489772958122,0,0,3.71869907997018,0,0);
          -ms-transform: matrix( 3.72489772958122,0,0,3.71869907997018,0,0);
          position: absolute;
          left: 714.799px;
          top: 367.448px;
          width: 128.276px;
          height: 10.89px;
          z-index: 296;



        p
          font-size: 6.716px;
          font-family: "Proxima Nova";
          color: rgb(255, 255, 255);
          line-height: 1.454;
          text-align: justify;
          -moz-transform: matrix( 2.95380588020396,0,0,2.94889041433089,0,0);
          -webkit-transform: matrix( 2.95380588020396,0,0,2.94889041433089,0,0);
          -ms-transform: matrix( 2.95380588020396,0,0,2.94889041433089,0,0);
          position: absolute;
          left: 713.611px;
          top: 519.554px;
          width: 178.729px;
          height: 75.359px;
          z-index: 295;
          margin: 0

        .line
          background: -webkit-linear-gradient(rgba(241, 234, 208, 1), rgba(241, 234, 208, 0.1));
          background: -o-linear-gradient(rgba(241, 234, 208, 1), rgba(241, 234, 208, 0.1));
          background: -moz-linear-gradient(rgba(241, 234, 208, 1), rgba(241, 234, 208, 0.1));
          background: linear-gradient(rgba(241, 234, 208, 1), rgba(241, 234, 208, 0.1));
          display: block
          width: 2.72px;
          margin-top: 10px;



      .story-1
        top 0

        .line
          height: 175px

      .story-2
        top $height

        .line
          height: 150px

      .story-3
        top $height * 2

        .line
          height: 150px

      .story-4
        top $height * 3

        .line
          height: 100px

      .story-5
        top $height * 4

        .line
          height: 150px

      .story-6
        top $height * 5

        .line
          height: 200px

      .story-7
        top $height * 6

        .line
