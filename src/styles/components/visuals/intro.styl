$candle_width = 240
$candle_height = 400
$phone_width = 200
$phone_height = 390


&__candle
  position absolute
  bottom 0
  // left (((1200 - $candle_width) / 2) / 1200) * 100%
  left 0
  right 0
  margin-left auto
  margin-right auto
  background-image url('/images/Candle.png')
  background-size contain
  background-repeat no-repeat
  background-position 50% 50%
  width ($candle_width / 1200) * 100%
  max-width 240px
  height 50%
  // height ($candle_height / 700) * 100%
  transition transform 1900ms ease, background-image 100ms ease
  opacity 1
  transform translate3d(0, 0, 0)
  z-index 500

  / .splash.is-step-1 &,
  / .splash.is-step-2 &,
  / .splash.is-step-3 &
    opacity 1
    transform translate3d(0,0,0)

  / .splash.is-step-4 &,
  / .splash.is-step-5 &,
  / .splash.is-step-6 &
    transform translate3d(0, -100vh, 0)

&__candle-reflection
  position absolute
  // left (((1200 - 300) / 2) / 1200) * 100%
  left 0
  right 0
  margin-left auto
  margin-right auto
  bottom 0
  background-image url('/images/Shadow_Reflection.png')
  background-size contain
  background-repeat no-repeat
  background-position 50% 50%
  width (300 / 1200) * 100%
  max-width 320px
  height (($candle_height / 700) / 3) * 100%
  max-height 118px
  transition opacity 350ms ease
  opacity 1
  transform translate3d(0, 0, 0)
  z-index 400

  / .splash.is-step-1 &,
  / .splash.is-step-2 &,
  / .splash.is-step-3 &
    opacity 1

  / .splash.is-step-4 &
  / .splash.is-step-5 &
  / .splash.is-step-6 &
    opacity 0

&__flame
  position absolute
  bottom 60%
  width (205 / 1200) * 100%
  height 148px
  // height ($candle_height / 850) * 100%
  left (((1200 - 205) / 2) / 1200) * 100%
  background-image url('/images/Candle_Loop.gif')
  background-repeat no-repeat
  background-position 170%
  transform translate3d(0, 0, 0)
  z-index 90
  transition opacity 2000ms ease

  / .splash.is-step-2 &
    opacity 0
    transition-delay 1s
    // background-image url('/images/Candle_Outro.gif')

  / .splash.is-step-3 &,
  / .splash.is-step-4 &,
  / .splash.is-step-5 &,
  / .splash.is-step-6 &
    opacity 0

  //   transform translate3d(0, -100vh, 0)

&__phone
  position absolute
  bottom 0
  width ($phone_width / 1200) * 100%
  max-width 220px
  // height ($phone_height / 700) * 100%
  height 42%
  max-height 400px
  background-image url('/images/Iphone_Screen_3.png')
  background-repeat no-repeat
  background-size contain
  margin-left 38%
  margin-right auto
  left 15%
  right 0
  z-index 510
  transform translate3d(0, 100vh, 0)
  transition transform 1500ms ease


  / .splash.is-step-2 &,
  / .splash.is-step-3 &
    transform translate3d(0, 0, 0)

  / .splash.is-step-4 &,
  / .splash.is-step-5 &,
  / .splash.is-step-6 &
    transform translate3d(0, -100vh, 0)

&__core
  position absolute
  bottom 10%
  left (((1200 - ($candle_width/2)) / 2) / 1200) * 100%
  // left 0
  // right 0
  // margin-left auto
  // margin-right auto
  background-image url('/images/Core.png')
  background-size contain
  background-repeat no-repeat
  background-position 50%
  width (($candle_width / 2) / 1200) * 100%
  // height ($candle_height / 720) * 100%
  height 45%
  transition transform 1500ms ease, opacity 100ms ease, left 550ms ease
  opacity 0
  transform translate3d(0, 0, 0)
  z-index 80

  / .splash.is-step-1 &,
  / .splash.is-step-2 &,
  / .splash.is-step-3 &,
  / .splash.is-step-4 &
    transform translate3d(0, 0, 0)
    transition-delay 200ms

  / .splash.is-step-4 &,
  / .splash.is-step-5 &,
  / .splash.is-step-6 &
    opacity 1

  / .splash.is-step-5 &
    transform translate3d(0, -100vh, 0)
    transition transform 1500ms ease, left 550ms ease
    transition transform, left
    transition-delay 700ms, 0ms

  / .splash.is-step-6 &
    left 31.6%
    opacity 1
    transition transform, opacity, left
    transition-delay 300ms, 0ms, 3500ms

&__board
  position absolute
  bottom 0
  left (((1000 - ($candle_width*2)) / 2) / 1000) * 100%
  background green
  width (($candle_width / 2) / 1000) * 100%
  height ($candle_height / 1440) * 100%
  transition all 1000ms ease
  opacity 0
  transform translate3d(0, 100vh, 0)
  z-index 80

  / .splash.is-step-1 &
  / .splash.is-step-2 &
  / .splash.is-step-3 &
    opacity 1
    left (((1000 - ($candle_width)) / 2) / 1000) * 100%
    transform translate3d(0, -80%, 0)

  / .splash.is-step-4 &
    opacity 1
    transform translate3d(0, -80%, 0)
    transition-delay 300ms

  / .splash.is-step-5 &
    left (((1000 - ($candle_width)) / 2) / 1000) * 100%
    transform translate3d(0, -100vh, 0)

&__battery
  position absolute
  bottom 0
  left ((1000 - ($candle_width / .6)) / 1000) * 100%
  background black
  width (($candle_width / 2) / 1000) * 100%
  height ($candle_height / 2160) * 100%
  transition all 800ms ease
  opacity 0
  transform translate3d(0, 100vh, 0)
  z-index 80

  / .splash.is-step-1 &
  / .splash.is-step-2 &
  / .splash.is-step-3 &
    opacity 1
    left ((1000 - ($candle_width * 2.2)) / 1000) * 100%
    transform translate3d(0, -80%, 0)

  / .splash.is-step-4 &
    opacity 1
    transform translate3d(0, -80%, 0)
    transition-delay 300ms

  / .splash.is-step-5 &
    left ((1000 - ($candle_width * 2.2)) / 1000) * 100%
    transform translate3d(0, -100vh, 0)


&__wax
  position absolute
  bottom 10%
  left (((1200 - ($candle_width)) / 2) / 1200) * 100%
  background-image url('/images/WaxInsert.png')
  background-size contain
  background-repeat no-repeat
  background-position 50%
  width (($candle_width) / 1200) * 100%
  // height ($candle_height / 720) * 100%
  height 45%
  transition transform 500ms ease, left 550ms ease
  opacity 0
  transform translate3d(0, 0, 0)
  z-index 70

  // / .splash.is-step-1 &,
  // / .splash.is-step-2 &,
  // / .splash.is-step-3 &,
  / .splash.is-step-4 &,
  / .splash.is-step-5 &,
  / .splash.is-step-6 &
    opacity 1

  / .splash.is-step-5 &
    transition transform 1500ms ease, left 550ms ease
    transition transform, left
    transition-delay 700ms, 0ms

  / .splash.is-step-6 &
    left (((1200 - ($candle_width)) / 3) / 1200) * 100%
    opacity 1
    transition transform, left
    transition-delay 500ms, 3500ms

&__wick
  position absolute
  bottom 50.6%
  left (((1200 - ($candle_width)) / 2) / 1200) * 100%
  background-image url('/images/Wick.png')
  background-size contain
  background-repeat no-repeat
  background-position 50%
  width (($candle_width) / 1200) * 100%
  // height ($candle_height / 720) * 100%
  height 5%
  transition opacity 500ms ease, left 550ms ease
  opacity 0
  transform translate3d(0, 0, 0)
  z-index 70

  // / .splash.is-step-1 &,
  // / .splash.is-step-2 &,
  // / .splash.is-step-3 &,
  // / .splash.is-step-4 &,
  / .splash.is-step-5 &,
  / .splash.is-step-6 &
    opacity 1
    // transition-delay 200ms

  / .splash.is-step-5 &
    transition transform 1500ms ease, left 550ms ease
    transition transform, left
    transition-delay 700ms, 0ms


  / .splash.is-step-6 &
    left (((1200 - ($candle_width)) / 3) / 1200) * 100%
    z-index 150
    opacity 1
    transition transform, left
    transition-delay 500ms, 3500ms


&__shell
  position absolute
  bottom 10%
  left (((1200 - ($candle_width)) / 2) / 1200) * 100%
  background-image url('/images/Shell_1.png')
  background-size contain
  background-repeat no-repeat
  background-position 50%
  width (($candle_width) / 1200) * 100%
  // height ($candle_height / 720) * 100%
  height 48%
  transition transform 1500ms ease, left 550ms ease
  opacity 0
  transform translate3d(0, -100vh, 0)
  z-index 80

  / .splash.is-step-5 &
    opacity 1
    transform translate3d(0, -100vh, 0)
    transition transform 1500ms ease, left 550ms ease
    transition transform, left
    transition-delay 200ms, 0ms

  / .splash.is-step-6 &
    left (((1200 - ($candle_width)) / 3) / 1200) * 100%
    // background-image url('/images/Shell_1.png')
    opacity 1
    transform translate3d(0, 0, 0)
    transition transform, left
    transition-delay 1300ms, 3500ms

.arrow-left
  width 0
  height 0
  border-top 20px solid transparent
  border-bottom 20px solid transparent
  border-right 20px solid rgba(255,255,255,0.3)
  position absolute
  left -20px
  top 20px



&__variants
  position absolute
  opacity 0
  bottom 10%
  left (((1200 - ($candle_width)) / 2) / 1200) * 100%
  width 30%
  max-width 310px
  // height ($candle_height / 720) * 100%
  height 48%
  transition opacity 1500ms ease, left 550ms ease
  opacity 0
  // transform translate3d(0, -100vh, 0)
  z-index 20
  color #211d1c

  / .splash.is-step-5 &
    transition opacity 500ms ease, left 550ms ease


  / .splash.is-step-6 &
    left 50%
    opacity 1
    transition opacity, left
    transition-delay 3600ms, 3500ms

  .footnote p
    color #211d1c
    font-size 12px
    padding-left 16px

&__info
  position relative
  padding 1px 24px
  font-size 12px
  margin-bottom 16px

  &:before
    position absolute
    pos-fill()
    content ''
    background #fff
    opacity 0.3

.swatches
  position relative
  display flex
  justify-content space-between
  align-content space-between
  flex-wrap wrap
  width 100%

.swatch
  display inline-block
  background #000
  max-width 71px
  margin-bottom 10px
  box-shadow 2px 2px 10px rgba(0,0,0,0.4)

  &__name
    padding 3px 7px
    color #000
    background #fff
    font-size 10px
    font-weight 600
