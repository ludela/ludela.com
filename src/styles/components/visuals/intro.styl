$width = 240
$height = 400



&__candle
  position absolute
  bottom 0
  left (((1000 - $width) / 2) / 1000) * 100%
  background gray
  width ($width / 1000) * 100%
  height ($height / 720) * 100%
  transition all 1900ms ease
  opacity 1
  transform translate3d(0, 0, 0)
  z-index 100

  / .splash.is-step-1 &,
  / .splash.is-step-2 &,
  / .splash.is-step-3 &
    opacity 1
    transform translate3d(0,0,0)

  / .splash.is-step-4 &,
  / .splash.is-step-5 &
    transform translate3d(0, -100vh, 0)



&__flame
  position absolute
  bottom 10%
  width 30px
  height ($height / 720) * 100%
  background yellow
  margin-left auto
  margin-right auto
  left 0
  right 0
  transform translate3d(0, 0, 0)
  z-index 90
  transition transform 1950ms ease

  / .splash.is-step-2 &
    transform translate3d(0, 320%, 0)

  / .splash.is-step-4 &
    transform translate3d(0, -100vh, 0)

&__phone
  position absolute
  bottom 10%
  width 150px
  height 200px
  background #000
  margin-left auto
  margin-right auto
  left 25%
  right 0
  z-index 110
  transition transform 330ms ease

  / .splash.is-step-1 &
    transform translate3d(0, 100vh, 0)

  / .splash.is-step-2 &
    transform translate3d(0, 0, 0)

  / .splash.is-step-4 &,
  / .splash.is-step-5 &
    transform translate3d(0, -100vh, 0)

