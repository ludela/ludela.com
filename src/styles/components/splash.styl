.splash
  position relative
  pos-fill()
  z-index 100
  background #221010
  transition background 2s ease

  &:before
    content ''
    position fixed
    pos-fill()
    background linear-gradient(0deg, rgba(255,255,255,0) 40%, rgba(255,255,255,0.3))
    transition opacity 2s ease

  &:after
    content ''
    position fixed
    pos-fill()
    background url('/images/BG_1.jpg') no-repeat
    background-size cover
    z-index -100
    opacity 0
    transition opacity 1s ease

  &__headline
    position absolute
    opacity 0
    text-align center
    right 0
    left 0
    margin-left auto
    margin-right auto
    // left (((1200 - 640) / 2) / 1200) * 100%
    // width ($width / 1200) * 100%
    // height 150px
    transform translate3d(0, 10vh, 0)
    transition all 2500ms ease
    color #f1ead0
    z-index 100

    h1, .h1
      font-family 'Freeland'
      font-size 30px

    .subhead
      display block
      font-family 'Proxima Nova'
      font-size 12px
      text-transform uppercase
      margin-top 0

  &__container
    position fixed
    pos-fill()
    max-width 1200px
    margin 0 auto
    margin-bottom 3%
    overflow-y scroll

  &__content
    position relative
    width 100%
    height 100vh

.mobile-overlay
  position relative
  background rgba(0,0,0, 0.6)
  height auto
  padding 48px
  margin-top 110vh
  margin-bottom 90vh
  z-index 5000

.small-text
  display block
  position relative
  width 14em
  height 4em
  margin-bottom 20px
  transition opacity 1s ease, transform 900ms ease
  opacity 0

  &__title
    font-size 12px
    font-weight 600
    text-transform uppercase
    color #f2ebd2
    padding-left 40px

  &__desc
    color #f2be3d
    font-size 12px
    margin-top 5px
    padding-left 40px



  &__icon
    font-size 30px
    position absolute
    // float left
    // top -12px
    // right -40px



ul
  list-style none

  &.link-list
    padding-top 50px
    text-align center
    li
      display inline-block
      text-transform uppercase
      color #D37C3B
      // margin 0 5px

      & + li:before
        content '|'
        margin 0 15px 0 12px

form
  font-size 0

  // input
  //   font-size 12px

.copyright
  padding-top 10px
  text-align center
  color #D37C3B
  p
    font-size 12px
    text-transform uppercase

@media all and (min-height 700px)

  .splash
    &__container
      margin-bottom 0

    &__headline
      font-size 85px

  .small-text
    bottom 40%


@media all and (min-width 800px)
  .splash

    &__headline
      h1, .h1
        font-size 85px

      .subhead
        font-size 20px
        margin-top -20px

    &__container
      overflow-y hidden


    .mobile-overlay
      position initial
      background none
      height auto
      padding 0
      margin 0

    .small-text
      display inline-block
      position absolute
      left 50%
      bottom 45%
      width 15em
      transform translate3d(0, 500%, 0)

      &__title
        padding-left 0

      &__desc
        padding-left 0

        &.\\+dark
          color #3d2716

      &.\\+left
        text-align right
        margin-left ((250 + 155) / 1200) * -100%

      &.\\+right
        margin-left (170 / 1200) * 100%

        .small-text__icon
          left -40px

      &.\\+one
        margin-bottom 24%
        // margin-bottom 0
        transition-delay 800ms

      &.\\+two
        margin-bottom 24%
        // margin-bottom 0
        transition-delay 900ms

      &.\\+three
        margin-bottom 17%
        // margin-bottom 90px
        transition-delay 1000ms

      &.\\+four
        margin-bottom 17%
        // margin-bottom 90px
        transition-delay 1100ms

      &.\\+five
        margin-bottom 9%
        // margin-bottom 180px
        transition-delay 1200ms

      &.\\+six
        margin-bottom 9%
        // margin-bottom 180px
        transition-delay 1300ms

      &.\\+seven
        margin-bottom 2%
        // margin-bottom 260px
        transition-delay 1400ms

      &.\\+eight
        margin-bottom 2%
        // margin-bottom 260px
        transition-delay 1500ms

      &__icon
        float none
        font-size 30px
        position absolute
        top -12px
        right -40px











