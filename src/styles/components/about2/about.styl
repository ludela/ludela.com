&#about2
  color rgb(241, 234, 208)
  width 100vw
  transition left 350ms ease-out
  text-align center
  position absolute
  top 0

  .about-background
    display block
    position fixed
    top 0
    left 0
    width 100vw
    height 100vh
    background -webkit-linear-gradient(#ee9347, #f2bc3d)
    background -o-linear-gradient(#ee9347, #f2bc3d)
    background -moz-linear-gradient(#ee9347, #f2bc3d)
    background linear-gradient(#ee9347, #f2bc3d)

  h1
    font-size 90px
    position relative
    font-family "Freeland"
    font-weight normal
    color rgb(241, 234, 208)
    line-height 1
    text-align center
    margin-top 45px
    margin-bottom 10px
    text-shadow 0px 2px 13px rgba(0, 0, 0, 0.3)
    z-index 1

  h2
    font-size 20px
    position relative
    font-family "Proxima Nova"
    color rgb(241, 234, 208)
    font-weight bold
    text-transform uppercase
    line-height 1
    text-shadow 0px 2px 13px rgba(0, 0, 0, 0.3)
    z-index 1

  p
    font-size 20px
    position relative
    font-family "Proxima Nova"
    color #f1ead0
    line-height 1.454
    font-weight bold
    text-align justify
    width 497px
    margin 0
