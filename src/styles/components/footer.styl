@media screen and (max-width 980px)
  &.nav-open.is-footer #footer .footer__hold
    transform translate3d(0, 0, 0)

  #footer
    text-align center

    .footer__hold
      background-size auto 100%

    br
      display none

    .header-bar
      padding-top 10px

    .footer__wrap
      position absolute
      top 0
      left 0
      margin-left 0
      width 100vw

    .footer__content
      display inline-block
      padding 0
      padding-top 120px
      height 100vh
      width 100vw

      .header
        font-size 60px
        font-family "Freeland"
        font-weight normal
        color #f1ead0
        line-height 1
        text-align center
        margin-top 0
        margin-bottom 50vh
        text-shadow 0px 2px 13px rgba(0,0,0,0.3)
        z-index 302

      .sub-header
        font-size 12px
        font-family "Proxima Nova"
        color #f2be3d
        position absolute
        width 100vw
        bottom 0
        left 0
        font-weight bold
        text-transform uppercase
        line-height 1
        margin 8px 0
        text-align center
        text-shadow 0px 2px 13px rgba(0,0,0,0.3)
        z-index 301

      form
        width 100vw
        position absolute
        left 0
        padding 0 5vw
        bottom 30px

        input[type="text"]
          background-color rgb(241, 234, 208)
          color #000
          font-size 12px
          font-weight bold
          border none
          width 66%
          max-width 334px
          height 30px

        input[type="submit"]
          background-color rgb(237, 141, 72)
          color rgb(241, 234, 208)
          text-transform uppercase
          font-size 12px
          font-weight bold
          border none
          width 33%
          max-width 167px
          height 30px


    .footer__candle
      display inline-block
      top 60px
      left 0
      width 100vw
      height 80vh
      position absolute
      transform translate3d(0, 20vh, 0)
      transition all 350ms ease
      transition-delay 1s

      img
        height 100%
        width auto

    .footer__links
      position relative
      top 80vh

      .footer__link, span
        font-size 12px
        padding 2px

      .copyright
        font-size 10px
        display block
