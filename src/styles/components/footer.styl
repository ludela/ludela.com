  #footer
    text-align center

    .header-bar
      padding-top 10px

    .footer__wrap
      position absolute
      top 0
      left 0
      margin-left 0
      width 100vw

    .footer__content
      display inline-block
      padding 0
      margin 50vh auto

      .header
        font-size 60px
        font-family "Freeland"
        font-weight normal
        color #f1ead0
        line-height 1
        text-align center
        margin-top 22px
        margin-bottom 5px
        text-shadow 0px 2px 13px rgba(0,0,0,0.3)
        z-index 302

      .sub-header
        font-size 18px
        font-family "Proxima Nova"
        color #f1ead0
        font-weight bold
        text-transform uppercase
        line-height 2.199
        margin-top 0
        margin-bottom 1.5rem
        text-align center
        text-shadow 0px 2px 13px rgba(0,0,0,0.3)
        z-index 301

      input[type="text"]
        background-color rgb(241, 234, 208)
        color #000
        font-size 12px
        font-weight bold
        border none
        width 176px
        height 30px

      input[type="submit"]
        background-color rgb(237, 141, 72)
        color rgb(241, 234, 208)
        text-transform uppercase
        font-size 12px
        font-weight bold
        border none
        width 80px
        height 30px


    .footer__candle
      display inline-block
      top 0
      left 50vw
      width 60vw
      margin-left -30vw
      position absolute
      transform translate3d(0, 20vh, 0)
      transition all 350ms ease
      transition-delay 1s

      img
        width 100%

    .footer__links
      padding 50px

      .footer__link, span
        font-size 18px

      .copyright
        font-size 16px
