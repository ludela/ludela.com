      h1
        margin-top 0
      .story-1, .story-2, .story-3, .story-4, .story-5, .story-6, .story-7, .story-8, .story-9
        height $height

        br
          display none

        .line
          margin 10px auto
          width 4px
          height 30vh
          background -webkit-linear-gradient(rgba(241, 234, 208, 1), rgba(241, 234, 208, 0.1))
          background -o-linear-gradient(rgba(241, 234, 208, 1), rgba(241, 234, 208, 0.1))
          background -moz-linear-gradient(rgba(241, 234, 208, 1), rgba(241, 234, 208, 0.1))
          background linear-gradient(rgba(241, 234, 208, 1), rgba(241, 234, 208, 0.1))


        .line-top
          display none

        .story-text
          position relative
          display block
          width 80vw
          margin 5vw 10vw
          left 0
          top 0

        .story-img
          position relative
          height 20vh
          display inline-block
          width 100vw
          margin 10vw 0
          overflow hidden
          left 0
          top 5vh

          img
            top 0
            width 100%


          h3
            top 7vh
            font-size 35px
            z-index 999
            opacity 0.75
            padding 40px 0 0 0
            bottom 0
            margin-bottom 0
            background linear-gradient(rgba(44, 21, 0, 0), rgba(44, 21, 0, 1))

        .story-text
          height auto

          h2, p
            font-size 15px

      .story-1
        top 2vh

        .story-text
          h2, p
            top 10vh

        .story-img
          top 15vh
          img
            top -5vh
          h3
            top 4vh

      .story-2
        top $height * 1

        .story-img
          img
            top 5vh

      .story-3
        top $height * 2

        .story-img
          img
            top -10vh

      .story-4
        top $height * 3

        .story-img
          img
            top 3vh

      .story-5
        top $height * 4

        .story-img
          img
            top 10vh

      .story-6
        top $height * 5

        .story-img
          img
            top 10vh

      .story-7
        top $height * 6

        .story-img
          img
            top 10vh
