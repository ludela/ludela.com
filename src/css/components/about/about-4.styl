
$width = 1200px
$height = 100vh

&#about
  #step-4
    opacity 1
    background none
    top 0
    left 0
    width 100vw
    position absolute
    transform translate3d(0, $height, 0)
    transition all 750ms ease
    height $height

    .our-story
      width $width
      margin 0 auto
      position absolute
      left 50%
      top 0
      margin-left ($width * -0.5)

      h1
        width 100%
        max-width 1200px
        text-align center
        position absolute
        top 75px

    .story-1, .story-2, .story-3, .story-4, .story-5, .story-6, .story-7, .story-8, .story-9
      position absolute
      width 100vw
      height $height
      overflow-y hidden
      left 0

      &.scroll
        overflow-y scroll

      .story__content
        width 1200px
        position absolute
        left 50vw
        margin-left -600px

      .story-img
        position absolute
        top 0
        left 0
        height $height * 0.8
        width $width * 0.4

        h3
          font-size 60px
          font-family "Proxima Nova"
          color rgb(241, 234, 208)
          text-transform uppercase
          font-weight 100
          line-height 1
          width 100%
          text-align center
          position absolute
          left 0
          top 30%
          transform translate3d(0, (0.2 * $height), 0)
          transition all 1s ease-in

        img
          position absolute
          top 50%
          left 0
          width 100%
          height auto
          transform translate3d(0, (-0.3 * $height), 0)
          transition all 750ms ease-in


      .story-text
        position absolute
        left $width * 0.5
        top 0
        width 530px
        z-index 99
        display flex
        flex-direction column
        height 100vh

        h2
          font-size 20px
          font-family "Proxima Nova"
          color #f1ead0
          text-transform uppercase
          line-height 1.271
          text-align left
          text-shadow 0px 2px 13px rgba(0,0,0,0.3)
          z-index 296
          position relative
          top 0
          left 0

        p
          font-size 20px
          font-family "Proxima Nova"
          color #fff
          font-weight bold
          line-height 1.454
          text-align justify
          z-index 295
          margin 0
          margin-top 0
          position relative
          width 100%
          top 0
          left 0
          display flex
          flex-direction column

      .line-top
        position relative
        top -5vh
        background -webkit-linear-gradient(rgba(241, 234, 208, 0.5), rgba(241, 234, 208, 0.1))
        background -o-linear-gradient(rgba(241, 234, 208, 0.5), rgba(241, 234, 208, 0.1))
        background -moz-linear-gradient(rgba(241, 234, 208, 0.5), rgba(241, 234, 208, 0.1))
        background linear-gradient(rgba(241, 234, 208, 0.5), rgba(241, 234, 208, 0.1))
        display block
        width 8px
        height (($height * 0.2) + 400 )
        margin-top 24px
        z-index 999

      .line
        background -webkit-linear-gradient(rgba(241, 234, 208, 1), rgba(241, 234, 208, 0.5))
        background -o-linear-gradient(rgba(241, 234, 208, 1), rgba(241, 234, 208, 0.5))
        background -moz-linear-gradient(rgba(241, 234, 208, 1), rgba(241, 234, 208, 0.5))
        background linear-gradient(rgba(241, 234, 208, 1), rgba(241, 234, 208, 0.5))
        display block
        width 8px
        margin-top 24px
        flex-grow 1



    .story-1
      top 0

      .story-img
        img
          top 56%
      .story-text
        .line-top
          background none
          height 31vh

      // .line
        // height $height * 0.6

    .story-2
      top $height

      .story-img
        h3
          top 23%

      .story-text
        top 0

        .line-top
          height 14vh

      .line
        height $height * 0.68

    .story-3
      top $height * 2

      .story-img
        h3
          top 24%

      // .story-text
        // .line-top
        // height 16.3vh

      .line
        height $height * 0.6

    .story-4
      top $height * 3

      .story-img
        h3
          top 22%

      .story-text
        top 0

        .line-top
          height 18vh

      .line
        height  $height * 0.4

    .story-5
      top $height * 4

      .story-img
        h3
          top 24%

      // .story-text
        // .line-top
        // height 16.3vh

      .line
        height $height * 0.65

    .story-6
      top $height * 5

      .story-img
        h3
          top 22%

      .story-text
        top 0

        .line-top
          height 14vh

      .line
        height $height * 0.68

    .story-7
      top $height * 6

      .story-img
        h3
          top 15%

      .story-text
        top 0

        .line-top
          height 27vh

      .line
        height  $height * 0.66

    .story-8
      top $height * 7

      .story-img
        h3
          top 18%
        img
          top 45%

      .story-text
        top 0

        .line-top
          height 220px

      .line
        height  $height * 0.66

    .story-9
      top $height * 8
      margin-bottom 200px

      .story-img
        h3
          top 15%
        img
          top 12%

      .story-text
        top 0

        .line-top
          height 250px

  &.is-step-4

    &.is-story-1 #step-4
      transform translate3d(0, 0, 0)
      transition all 750ms ease

      .story-1
        h3
          transform translate3d(0, 0, 0)
          transition all 750ms ease

        img
          transform translate3d(0, 0, 0)
          transition all 1s ease

    &.is-story-2 #step-4
      transform translate3d(0, (-1 * $height), 0)
      transition all 750ms ease

      .story-2
        h3
          transform translate3d(0, 0, 0)
          transition all 1s ease
          transition-delay 500ms

        img
          transform translate3d(0, (-0.1 * $height), 0)
          transition all 1s ease
          transition-delay 500ms

    &.is-story-3 #step-4
      transform translate3d(0, (-2 * $height), 0)
      transition all 750ms ease

      .story-3
        h3
          transform translate3d(0, 0, 0)
          transition all 1s ease
          transition-delay 500ms

        img
          transform translate3d(0, (-0.1 * $height), 0)
          transition all 1s ease
          transition-delay 500ms

    &.is-story-4 #step-4
      transform translate3d(0, (-3 * $height), 0)
      transition all 750ms ease

      .story-4
        h3
          transform translate3d(0, 0, 0)
          transition all 1s ease
          transition-delay 500ms

        img
          transform translate3d(0, (-0.05 * $height), 0)
          transition all 1s ease
          transition-delay 500ms

    &.is-story-5 #step-4
      transform translate3d(0, (-4 * $height), 0)
      transition all 750ms ease

      .story-5
        h3
          transform translate3d(0, 0, 0)
          transition all 1s ease
          transition-delay 500ms

        img
          transform translate3d(0, (-0.1 * $height), 0)
          transition all 1s ease
          transition-delay 500ms

    &.is-story-6 #step-4
      transform translate3d(0, (-5 * $height), 0)
      transition all 750ms ease

      .story-6
        h3
          transform translate3d(0, (0.02 * $height), 0)
          transition all 1s ease
          transition-delay 500ms

        img
          transform translate3d(0, (-0.1 * $height), 0)
          transition all 1s ease
          transition-delay 500ms

    &.is-story-7 #step-4
      transform translate3d(0, (-6 * $height), 0)
      transition all 750ms ease

      .story-7
        h3
          transform translate3d(0, (0.02 * $height), 0)
          transition all 1s ease
          transition-delay 500ms

        img
          transform translate3d(0, (-0.1 * $height), 0)
          transition all 1s ease
          transition-delay 500ms

    &.is-story-8 #step-4
      transform translate3d(0, (-7 * $height), 0)
      transition all 750ms ease

      .story-8
        h3
          transform translate3d(0, (0.05 * $height), 0)
          transition all 1s ease
          transition-delay 500ms

        img
          transform translate3d(0, 0, 0)
          transition all 1s ease
          transition-delay 500ms

    &.is-story-9 #step-4
      transform translate3d(0, (-8 * $height), 0)
      transition all 750ms ease

      .story-9
        h3
          transform translate3d(0, (0.05 * $height), 0)
          transition all 1s ease
          transition-delay 500ms

        img
          transform translate3d(0, 0, 0)
          transition all 1s ease
          transition-delay 500ms

  &.is-step-5

    #step-4
      transform translate3d(0, (-9 * $height), 0)
      transition all 750ms ease

      .story-9
        h3
          transform translate3d(0, (0.05 * $height), 0)
          transition all 1s ease
          transition-delay 500ms

        img
          transform translate3d(0, 0, 0)
          transition all 1s ease
          transition-delay 500ms



@media screen and (max-width 1200px)
  &#about
    #step-4
      .our-story
        width 100vw
        margin-left -50vw

      .story-1, .story-2, .story-3, .story-4, .story-5, .story-6, .story-7, .story-8, .story-9
        width 100vw

        .story-img
          width 40vw

          h3
            font-size 6vw

        .story-text
          left 47vw
          width 45vw
          display flex
          flex-direction column
          height 100vh


          h2, p
            font-size 1.92vw

          p
            display flex
            flex-direction column

          .line
            width 4px
            flex-grow 1

          .line-top
            width 4px
            height 20vh

      .story-1 .story-text .line-top
        height 44vh

      .story-7 .story-text .line-top
        height 33vh

      .story-8 .story-text .line-top
        height 33vh

      .story-9 .story-text .line-top
        height 33vh

      .story-9 .story-img img
        top 20vh

