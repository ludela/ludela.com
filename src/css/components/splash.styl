.splash
  position relative
  pos-fill()
  z-index 100
  background #221010
  transition background 2s ease

  &.is-step-7
    z-index 650

  &:before
    content ''
    position fixed
    pos-fill()
    background linear-gradient(0deg, rgba(255,255,255,0) 40%, rgba(255,255,255,0.3))
    transition opacity 2s ease

  &:after
    content ''
    position fixed
    pos-fill()
    background url('/images/BG_1.jpg') no-repeat
    background-size cover
    z-index -100
    opacity 0
    transition opacity 1s ease

  &__headline
    position fixed
    opacity 0
    text-align center
    right 0
    left 0
    margin-left auto
    margin-right auto
    // left (((1200 - 640) / 2) / 1200) * 100%
    // width ($width / 1200) * 100%
    // height 150px
    transform translate3d(0, 10vh, 0)
    transition all 2500ms ease
    color #f1ead0
    z-index 100

    h1, .h1
      font-family 'Freeland'
      font-size 30px
      text-shadow 3px 3px 15px #333

    .subhead
      display block
      font-family 'proxima-nova'
      font-size 12px
      text-transform uppercase
      margin-top 0

  &__container
    position relative
    pos-fill()
    max-width 1200px
    margin 0 auto
    margin-bottom 3%
    overflow-y scroll

  &__content
    position relative
    width 100%
    height 100vh

.mobile-padding
  height 50vh

.mobile-overlay
  position relative
  background rgba(0,0,0, 0.6)
  height auto
  padding 48px 15%
  z-index 5000

.small-text
  display inline-block
  position relative
  width 14em
  height 4em
  margin-bottom 20px
  opacity 0
  transition opacity 1s ease, transform 900ms ease

  &__title
    font-size 12px
    font-weight 600
    text-transform uppercase
    color #f2ebd2
    padding-left 40px

  &__desc
    color #f2be3d
    font-size 12px
    margin-top 5px
    padding-left 40px



  &__icon
    font-size 30px
    position absolute
    top 0
    color #f2ebd2
    // float left
    // top -12px
    // right -40px



ul
  list-style none
  z-index 1

  &.link-list
    padding-top 50px
    text-align center
    li
      display inline-block
      text-transform uppercase
      color #D37C3B
      // margin 0 5px
      a
        color inherit
        text-decoration none

      & + li:before
        content '|'
        margin 0 15px 0 12px




