&.nav-open.is-footer #footer .footer__hold
  transform translate3d(410px, 0, 0)
  transition all 350ms ease-out

  .header-bar
    left 0

#footer
  display block
  opacity 1
  position fixed
  height 100vh
  width 100vw
  top 100vh
  left 0
  transition top 1s ease
  text-align left
  z-index 1002

  .header-bar
    padding-top 40px
    opacity 0
    transition all 350ms ease

  .footer__hold
    display block
    background-image url(/images/join-us.png)
    background-repeat no-repeat
    background-position center
    transform translate3d(0, 0, 0)
    transition all 350ms ease-out
    position absolute
    top 0
    left 0
    width 100vw
    height 100vh
    background-size cover

  .footer__wrap
    position absolute
    top 0
    left 50%
    margin-left -600px
    width 100vw
    max-width 1200px

  .footer__content
    position relative
    display inline-block
    margin 100px

    .header
      font-size 85px
      font-family "Freeland"
      font-weight bold
      color #f1ead0
      line-height 1
      text-align center
      margin-top 45px
      margin-bottom 10px
      text-shadow 0px 2px 13px rgba(0,0,0,0.3)
      z-index 302

    .sub-header
      font-size 20px
      font-family "proxima-nova"
      color #f1ead0
      font-weight bold
      text-transform uppercase
      line-height 1.45
      margin-top 0
      margin-bottom 1.5rem
      text-align center
      text-shadow 0px 2px 13px rgba(0,0,0,0.3)
      z-index 301

    input[type="text"]
      background-color rgb(241, 234, 208)
      color #000
      font-size 12px
      font-weight bold
      border none
      width 352px
      height 38px

    input[type="submit"]
      background-color rgb(237, 141, 72)
      color rgb(241, 234, 208)
      text-transform uppercase
      font-size 12px
      font-weight bold
      border none
      margin-left -4px
      width 159px
      height 38px

    .login-button
      display: table;
      width: 510px;
      margin-top 20px
      text-align: center;

  .footer__candle
    display inline-block
    top 6vh
    right 5vw
    position absolute
    transform translate3d(0, -10vh, 0)
    transition all 350ms ease
    transition-delay 1s

    img
      max-width 80%

  .footer__link-wrap
    display inline-block
    position relative
    top 0
    transform translate3d(0, -2vh, 0)
    transition all 350ms ease
    transition-delay 500ms

  .footer__links
    position absolute
    bottom -200px
    left 0
    width 100%
    transform translate3d(0, 30vh, 0)
    transition all 350ms ease
    transition-delay 500ms
    padding 50px 0
    text-align center

    .footer__link, span
      padding 5px
      font-size 12px
      font-weight normal
      line-height 1.5
      opacity 0
      transform translate3d(0, 0, 0)
      transition all 750ms ease-out
      transition-delay 1s
      color #ed8d48
      text-transform uppercase
      text-decoration none

    .copyright
      text-transform uppercase
      font-size 12px
      display inline-block
      margin-top 50px

  .header, .sub-header
    transform translate3d(0, 20vh, 0)
    transition all 700ms ease
    transition-delay 150ms

.is-footer #footer
  top 0
  transition top 1s ease

  .header-bar
    opacity 1
    transition opacity 500ms ease
    transition-delay 1s

  .footer__candle
    transform translate3d(0, 0, 0)
    transition all 1s ease
    transition-delay 250ms

  .footer__links
    padding 20px 0
    transform translate3d(0, 0, 0)
    transition all 750ms ease
    transition-delay 500ms

  .footer__link-wrap
    transform translate3d(0, 0, 0)
    transition all 500ms ease-out
    transition-delay 1.25s

  .footer__link, span
    opacity 1
    transform translate3d(0, 0, 0)
    transition all 750ms ease-out
    transition-delay 500ms

  .header, .sub-header
    transform translate3d(0, 0, 0)
    transition all 1s ease

#general #footer .header-bar
  background none

@media screen and (max-width 980px)
  &.nav-open.is-footer #footer .footer__hold
    transform translate3d(0, 0, 0)

  #footer
    text-align center

    br
      display none

    .header-bar
      padding-top 10px

    .footer__wrap
      position absolute
      top 0
      left 0
      margin-left 0
      width 100vw

    .footer__content
      display inline-block
      padding 0
      margin 0
      padding-top 120px
      height 100vh
      width 100vw

      .header
        font-size 30px
        font-family "Freeland"
        font-weight normal
        color #f1ead0
        line-height 1
        text-align center
        margin 5vh 0 10vh
        text-shadow 0px 2px 13px rgba(0,0,0,0.3)
        z-index 302

      .sub-header
        display none

      form
        width 90vw
        position absolute
        left 5vw
        padding 0 5vw

        input[type="text"]
          background-color rgb(241, 234, 208)
          color #000
          font-size 12px
          font-weight bold
          border none
          width 66%
          max-width 334px
          height 30px

        input[type="submit"]
          background-color rgb(237, 141, 72)
          color rgb(241, 234, 208)
          text-transform uppercase
          font-size 12px
          font-weight bold
          border none
          width 33%
          max-width 167px
          height 30px



      .login-button
        display: table;
        width: 78vw;
        margin 120px 11vw
        text-align: center;


    .footer__candle
      display none
      top 60px
      left 0
      width 100vw
      height 80vh
      position absolute
      transform translate3d(0, 20vh, 0)
      transition all 350ms ease
      transition-delay 1s

      img
        height 100%
        width auto

    .footer__links
      position relative
      top 80vh

      .footer__link, span
        font-size 12px
        padding 2px

      .copyright
        font-size 10px
        display block
