// Generic Modal Effects
.checkout-modal
  position: fixed
  opacity: 0
  width: 100vw
  height: 100vh
  top: -500vh
  left: 0
  z-index: 999
  background-color: rgba(0, 0, 0, 0.75)
  transition: opacity 500ms ease
  z-index: 3000

  &.hidden
    display: block !important

  &.is-open
    top: 0
    opacity: 1
    transition: opacity 500ms ease

.modal-close:not(.checkout-button)
  width 35px
  height 30px
  position absolute
  left 40px
  top 40px
  margin 0 auto
  margin-top -8px
  -webkit-transform rotate(0deg)
  -moz-transform rotate(0deg)
  -o-transform rotate(0deg)
  transform rotate(0deg)
  transition 350ms ease-in-out
  cursor pointer

  span
    display block
    position absolute
    height 4px
    width 100%
    background rgb(241, 234, 208)
    opacity 1
    left 0
    -webkit-transform rotate(0deg)
    -moz-transform rotate(0deg)
    -o-transform rotate(0deg)
    transform rotate(0deg)
    transition 150ms ease-in-out

    &:nth-child(1)
      top 18px
      width 0%
      left 50%


    &:nth-child(2)
      transform rotate(45deg)

    &:nth-child(3)
      transform rotate(-45deg)

    &:nth-child(4)
      top 18px
      width 0%
      left 50%

@media screen and (max-width: 980px)
