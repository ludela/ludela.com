#page-press

  .news
    margin-top: 100px

    a
      width: 100%
      display: table
      padding: 20px
      background-color: black

    img
      display: block
      margin-left: auto
      margin-right: auto

  .press-logos
    width: 100vw
    margin-bottom: 100px

    .press-logo
      width: 32%
      float: left
      text-align: center
      margin-bottom: 40px
      margin-right: 2%

      &.dark
        img
          background-color: black

      img
        display: block
        margin-left: auto
        margin-right: auto
        max-width: 400px
        width: 100%
        padding:40px
        margin-bottom: 20px

      &:nth-child(3n+1)
        margin-right: 0%
